<robot name="rrr_robot">

  <!-- ESTRUCTURA BASE DEL ROBOT -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry><box size="0.2 0.2 0.1"/></geometry>
      <material name="DarkGray"><color rgba="0.2 0.2 0.2 1.0"/></material>
    </visual>
  </link>

  <!-- CILINDRO SUPERIOR (shoulder_link), ALTURA 0.10 m -->
  <link name="shoulder_link">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry><cylinder radius="0.03" length="0.05"/></geometry>
      <material name="Orange"><color rgba="1 0.5 0 1.0"/></material>
    </visual>
  </link>

  <!-- SEGMENTO INTERMEDIO DEL BRAZO (0.20 m) -->
  <link name="arm_link">
    <visual>
      <origin xyz="0.1 0 0" rpy="0 0 0"/>
      <geometry><box size="0.20 0.03 0.03"/></geometry>
      <material name="Blue"><color rgba="0 0 1 1.0"/></material>
    </visual>
  </link>

  <!-- TRAMO DISTAL DEL BRAZO (0.35 m) -->
  <link name="forearm_link">
    <visual>
      <origin xyz="0.175 0 0" rpy="0 0 0"/>
      <geometry><box size="0.35 0.03 0.03"/></geometry>
      <material name="Green"><color rgba="0 1 0 1.0"/></material>
    </visual>
  </link>

  <!-- CONJUNTO DE ARTICULACIONES -->
  <joint name="shoulder_joint" type="continuous">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- unión cilindro → brazo intermedio: eje tipo pitch (ajuste en elevación) -->
  <joint name="arm_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child link="arm_link"/>
    <origin xyz="0 0 0.05" rpy="3.14159265 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5708" upper="1.5708" effort="10.0" velocity="3.14"/>
  </joint>

  <!-- enlace entre tramo magenta original y segmento amarillo final -->
  <joint name="forearm_joint" type="revolute">
    <parent link="arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0.20 0 0" rpy="3.14159265 0 0"/>
    <axis xyz="0 -1 0"/>
    <limit lower="-2.61799" upper="1.5708" effort="10.0" velocity="3.14"/>
  </joint>

</robot>
